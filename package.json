{
  "name": "coaching-tracker",
  "version": "2.0.0",
  "description": "Coaching Tracker with Node.js API and PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit --audit-level=high",
    "security:check": "npm audit --audit-level=high && npm run lint",
    "prepare": "husky install",
    "pre-commit": "npm run lint && npm audit --audit-level=moderate"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
